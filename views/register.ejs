<%- include('./layouts/header.ejs') %> 

<div class="w3-content" style="max-width:1100px;margin-top:80px;margin-bottom:80px">
  
  <div class="w3-center w3-padding-64" id="contact">
    <span class="w3-xlarge w3-bottombar w3-border-dark-grey w3-padding-16">Register</span>
  </div>

  <form class="w3-container"  action="/auth/register" method="post">
    <div class="w3-section">
      <label>Email</label>
      <input class="w3-input w3-border w3-hover-border-black" style="width:100%;" 
      type="text" name="email"
      id="email"
      value="<%= locals.email ? email : '' %>" >
    </div>
    <div class="w3-section">
      <label>Password</label>
      <input type="password" class="w3-input w3-border w3-hover-border-black" style="width:100%;" 
      name="password" id="password"  >
    </div>
    <div class="w3-section">
      <label>Confirm Password</label>
      <input type="password" class="w3-input w3-border w3-hover-border-black" style="width:100%;" 
      name="password2" id="password2"  >
    </div>
    <button type="submit" class="w3-button w3-block w3-black"  value="Register" >Register</button>
    <br>
    <div>
      <p>already have an Account? <a href="/auth/login">Login</a></p>
    </div>
  </form>

</div>

<%- include('./layouts/footer.ejs') %> 
